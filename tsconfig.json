{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",        
      "baseUrl": "src/",
      "paths": {
        "@src/*": ["*"],
        "@core": ["core"],
        "@users/*": ["domains/authentication/users/*"],
        "@categories/*": ["components/categories/*"],
        "@challenges/*": ["components/challenges/*"],
        "@notifications/*": ["components/notifications/*"],
        "@questions/*": ["components/questions/*"]
      }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
    ]
  }